---
const { lang } = Astro.props;
import en from "../locales/en.json";
import ar from "../locales/ar.json";
const t = lang === "ar" ? ar.publications : en.publications;
---

<section class="py-8">
  <h2 class="text-2xl font-bold mb-4">{t.title}</h2>
  <a
    href="https://anmarhaniv1.hashnode.dev/"
    target="_blank"
    rel="noopener"
    class="inline-block px-4 py-1 bg-indigo-700 hover:bg-indigo-900 text-white rounded-full transition mb-2"
    >{t.explore}</a
  >
</section>


---
const { lang } = Astro.props;
import en from '../locales/en.json';
import ar from '../locales/ar.json';
const t = lang === 'ar' ? ar.hero : en.hero;
---
<section class="text-center py-12">
  <h1 class="text-4xl md:text-5xl font-bold mb-4">{t.title}</h1>
  <p class="text-lg md:text-xl mb-2">{t.subtitle}</p>
  <p class="mb-6">{t.brief}</p>
  <a href="https://linktr.ee/anmarhani" target="_blank" rel="noopener" class="inline-block px-6 py-2 bg-indigo-600 hover:bg-indigo-800 text-white rounded-full shadow-lg transition">{t.linktree}</a>
</section> 